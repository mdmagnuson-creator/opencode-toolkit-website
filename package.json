{
  "name": "opencode-toolkit-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run extract-data && next dev",
    "build": "next build",
    "prebuild": "[ -n \"$CI\" ] && echo 'Skipping prebuild in CI' || npx tsx scripts/generate-manifest.ts ~/.config/opencode || echo 'Using existing manifest'",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "extract-data": "npx tsx scripts/extract-toolkit-data.ts"
  },
  "dependencies": {
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "playwright": "^1.58.2",
    "tailwindcss": "^4",
    "tsx": "^4",
    "typescript": "^5"
  }
}
