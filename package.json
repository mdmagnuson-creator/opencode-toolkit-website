{
  "name": "opencode-toolkit-website",
  "version": "0.1.0",
  "private": true,
  "comment:scripts": "Note: prepare-data uses bash syntax and requires a Unix-like shell. Windows users should run fetch-data and transform-data manually.",
  "scripts": {
    "dev": "npm run prepare-data && next dev --port 4004",
    "build": "next build",
    "prebuild": "[ -n \"$CI\" ] && echo 'Skipping prebuild in CI' || npm run prepare-data",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test --reporter=list",
    "typecheck": "tsc --noEmit",
    "fetch-data": "npx tsx scripts/fetch-toolkit-manifest.ts",
    "transform-data": "npx tsx scripts/transform-toolkit-structure.ts",
    "sync-changelog": "npx tsx scripts/sync-changelog.ts",
    "prepare-data": "npm run fetch-data && npm run transform-data && npm run sync-changelog"
  },
  "dependencies": {
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^10",
    "eslint-config-next": "16.1.6",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "playwright": "^1.58.2",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4",
    "typescript": "^5"
  }
}
