{
  "$schema": "https://opencode.ai/schemas/project.json",
  
  "name": "Toolkit Website",
  "description": "Website explaining the AI toolkit system - primary agents, sub-agents, skills categorized with descriptions and counts, plus getting started instructions",
  
  "stack": {
    "languages": ["typescript"],
    "runtime": "node",
    "packageManager": "npm"
  },
  
  "apps": {
    "web": {
      "path": ".",
      "framework": "nextjs",
      "router": "app",
      "entryPoint": "app/"
    }
  },
  
  "styling": {
    "framework": "tailwind",
    "version": "4",
    "darkMode": {
      "enabled": true,
      "strategy": "class"
    }
  },
  
  "testing": {
    "unit": "jest",
    "e2e": "playwright"
  },
  
  "linting": {
    "eslint": true,
    "prettier": true
  },
  
  "commands": {
    "dev": "npm run dev",
    "build": "npm run build",
    "test": "npm test",
    "lint": "npm run lint",
    "typecheck": "npm run typecheck"
  },
  
  "qualityGates": {
    "preCommit": ["lint", "typecheck"],
    "preMerge": ["test", "build"]
  },
  
  "capabilities": {
    "authentication": false,
    "multiTenant": false,
    "payments": false,
    "email": false,
    "i18n": false,
    "darkMode": true,
    "marketing": true,
    "api": false,
    "realtime": false
  },
  
  "workflows": {
    "adhoc": ["build", "typecheck", "lint", "critic", "tester-scoped", "test", "commit", "report"],
    "prd": ["build", "critic", "tester", "typecheck", "lint", "test", "e2e", "commit"]
  },
  
  "agents": {
    "gitWorkflow": "trunk",
    "autoCommit": true,
    "autoPush": true,
    "browserVerification": true,
    "prReviewRequired": false
  },
  
  "context": {
    "architecture": "docs/ARCHITECTURE.md",
    "conventions": "docs/CONVENTIONS.md",
    "designSystem": null
  },

  "planning": {
    "considerations": [
      {
        "id": "permissions",
        "label": "Authorization and permissions",
        "required": true,
        "appliesWhen": ["api", "admin-ui", "data-access"],
        "scopeQuestions": [
          "Which roles are affected?",
          "Which actions need explicit allow/deny rules?",
          "What is expected unauthorized behavior (401 vs 403)?"
        ],
        "acceptanceCriteriaHints": [
          "Role matrix documented",
          "Unauthorized path behavior defined",
          "Permission checks covered by tests"
        ]
      },
      {
        "id": "support-docs",
        "label": "Support documentation impact",
        "required": false
      },
      {
        "id": "ai-tools",
        "label": "AI tool/chatbot impact",
        "required": false
      }
    ]
  }
}
